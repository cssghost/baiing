<script>
$(function() {
    var $lotteryBox = $(".lottery-result"),
        $layerLeft = $lotteryBox.find(".layer-left"),
        $layerRight = $lotteryBox.find(".layer-right"),
        isLottery = false;
    $lotteryBox.on("click", function(event){
        if ( !isLottery && !$layerLeft.is(":animated") ) {
            $.ajax({
                url : "/doLottery",
                type : "post",
                data : {},
                dataType : "json",
                success : function(result){
                    // console.log(result);
                    if ( result.success ) {
                        if ( result.num <= 0 ) {
                            alert("您的剩余抽奖次数为0，感谢您的参与！");
                            return false;
                        }
                        var width = $lotteryBox.width(),
                            show = event.offsetX ? event.offsetX : event.originalEvent.layerX,
                            widthL = show,
                            widthR = width - show;
                        $lotteryBox.removeClass().addClass("lottery-result lottery-result-" + result.prize);
                        $layerLeft.width(widthL);
                        $layerRight.width(widthR);
                        $layerLeft.animate({ width: 0 }, 400);
                        $layerRight.animate({ width: 0 }, 400);
                        result.num--;
                        $.cookie("lotteryNum", result.num,{ expires: 7, path: '/' });
                        isLottery = true;
                    } else{
                        alert("操作异常，请重新尝试");
                    }
                },
                error : function(){
                    alert("操作异常，请重新尝试");
                }
            });
        }
    });

    $(".reset").on("click", function(){
        isLottery = false;
        $layerLeft.animate({ width: 50 + "%" }, 400);
        $layerRight.animate({ width: 50 + "%" }, 400);
        popup.show();
    });

    $(".Js-scene").on("click", function(){
        var $scene = $(this),
            strScene = $scene.data("scene"),
            cookieScene = $.cookie("scene"),
            reg = new RegExp("###" + strScene, "gi");
        cookieScene = cookieScene ? cookieScene : "";
        if ( !cookieScene.match(reg) ) {
            $.cookie("scene", cookieScene + "###" + strScene);
        }
        if( $.cookie("scene").split("###").length > 3 ){
            popup.show();
        }
    });

    var popup = $.cgPopup({
        title : "提示",
        autoShow : false,
        cancel : function(option){
            option.hide();
        },
        done : function(option){
            option.hide();
        }
    });

    $(".jiathis_button_tsina").on("click", function(){
        window.location = "http://www.baidu.com";
        // popup.show();
    });
    $(document).on("click", "span.jtico", function(){
        window.location = "http://www.baidu.com";
        // popup.show();
    });

});
</script>


